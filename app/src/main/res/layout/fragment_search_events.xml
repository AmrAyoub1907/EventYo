<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_padding"
    tools:context="com.amrayoub.eventyo.SearchEventsfragment">
    <ProgressBar
        android:padding="156dp"
        android:visibility="gone"
        android:id="@+id/search_event_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <TextView
        android:id="@+id/searh_event_no_events"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text=" No Events Yet"
        android:gravity="center"
        android:textSize="24sp"
        android:visibility="gone"
        />
    <android.support.v7.widget.RecyclerView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/search_event">
    </android.support.v7.widget.RecyclerView>
</FrameLayout>
