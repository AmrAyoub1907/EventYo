<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"

    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/main_rv_cv"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:scaleType="centerCrop"
                android:src="@drawable/event_pic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/main_rv_photo"
                />
            <View
                android:background="@drawable/scrim_gradient"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:padding="@dimen/activity_padding"
            >
            <TextView
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/main_rv_title"
                android:layout_alignParentTop="true"
                android:textSize="@dimen/Event_TitleTextSize"
                android:textStyle="bold"
                android:text="Event Title"
                />

            <TextView
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/main_rv_date"
                android:layout_below="@+id/main_rv_title"
                android:textSize="@dimen/Event_DateTextSize"
                android:text="14/12/2017"
                />

        </RelativeLayout>
        </FrameLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>