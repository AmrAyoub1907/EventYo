<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.amrayoub.eventyo.EventActivity">
    <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|enterAlways"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
        </android.support.design.widget.AppBarLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <FrameLayout
                    android:id="@+id/photo_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <!--suppress AndroidLintContentDescription -->
                    <ImageView
                        android:id="@+id/event_photo"
                        android:src="@drawable/event_pic"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:maxHeight="200dp"
                        app:layout_collapseMode="parallax"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/scrim_gradient" />
                    <LinearLayout
                        android:onClick="uploadphoto"
                        android:orientation="horizontal"
                        android:layout_gravity="bottom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:padding="12dp"
                            android:textSize="18sp"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Upload Event Cover Photo"
                            android:textColor="#ffffff"
                            />
                        <ImageView
                            android:padding="12dp"
                            android:src="@drawable/ic_file_upload_24dp"
                            android:layout_weight="3"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />
                    </LinearLayout>

                </FrameLayout>
                <EditText
                    android:id="@+id/create_event_title"
                    android:textSize="18sp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="#fff"
                    android:elevation="4dp"
                    android:padding="20dp"
                    android:singleLine="true"
                    android:imeOptions="actionDone"
                    android:hint="Event Title" />
                <EditText
                    android:id="@+id/create_event_description"
                    android:textSize="18sp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="#fff"
                    android:elevation="4dp"
                    android:padding="20dp"
                    android:imeOptions="actionDone"
                    android:singleLine="true"
                    android:hint="Event Description" />
                <Spinner
                    android:id="@+id/create_event_category"
                    android:textSize="18sp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="3dp"
                    android:background="#fff"
                    android:elevation="4dp"
                    android:padding="20dp"
                    android:hint="Event Category" />
                <EditText
                    android:id="@+id/create_event_location"
                    android:textSize="18sp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="#fff"
                    android:clickable="true"
                    android:elevation="4dp"
                    android:padding="20dp"
                    android:imeOptions="actionDone"
                    android:singleLine="true"
                    android:hint="Event Loaction" />
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="3dp"
                    android:background="#fff"
                    android:elevation="4dp"
                    android:padding="20dp">
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/create_event_date"
                    android:textSize="18sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:hint="Event Date" />
                    <Button
                        android:text="Pick Date"
                        android:id="@+id/Create_event_date_button"
                        android:layout_weight="4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="3dp"
                    android:background="#fff"
                    android:elevation="4dp"
                    android:padding="20dp">
                    <TextView
                        android:layout_weight="1"
                        android:id="@+id/create_event_time"
                        android:textSize="18sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:hint="Event Time" />
                    <Button
                        android:id="@+id/Create_event_time_button"
                        android:layout_weight="4"
                        android:text="Pick Time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
</LinearLayout>

